    <style name="VendorRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/layer_list_ratingbar</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:maxHeight">24dp</item>
        <item name="android:minWidth">24dp</item>
        <item name="android:maxWidth">24dp</item>
    </style>

    <style name="CustomTitlePageIndicator">
        <item name="android:background">#18FF0000</item>
        <item name="footerColor">#0011CD</item>
        <item name="footerLineHeight">3dp</item>
        <item name="footerIndicatorHeight">3dp</item>
        <item name="footerIndicatorStyle">underline</item>
        <item name="android:textColor">#FBBD28</item>
        <item name="selectedColor">#0444FD</item>
        <item name="selectedBold">true</item>
    </style>

</resources>