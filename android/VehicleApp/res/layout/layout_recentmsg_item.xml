<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/useritem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="6dp" >

    <ImageView
        android:id="@+id/useritem_iv_userhead"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/useritem_tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/useritem_iv_userhead"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/useritem_iv_userhead"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="name"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/useritem_tv_lastmessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/useritem_tv_username"
        android:layout_below="@id/useritem_tv_username"
        android:layout_toRightOf="@id/useritem_iv_userhead"
        android:ellipsize="end"
        android:singleLine="true"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/useritem_tv_lastmessagetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/useritem_tv_lastmessage"
        android:ellipsize="end"
        android:gravity="right"
        android:singleLine="true"
        android:text="time"
        android:textSize="15sp" />

</RelativeLayout>