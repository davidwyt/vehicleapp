<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/commentitem_iv_userhead"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:focusable="false" />

    <TextView
        android:id="@+id/commentitem_tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/commentitem_iv_userhead"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/commentitem_iv_userhead"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/black"
        android:text="name"
        android:textSize="17sp" />

    <RatingBar
        android:id="@+id/ratingbar_score"
        style="@style/VendorRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/commentitem_tv_username"
        android:layout_below="@id/commentitem_tv_username"
        android:layout_marginTop="4dp"
        android:isIndicator="true"
        android:numStars="5"
        android:rating="5" />

    <TextView
        android:id="@+id/commentitem_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/ratingbar_score"
        android:textColor="@color/black"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="8dp"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/commentitem_tv_reviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/ratingbar_score"
        android:layout_below="@id/ratingbar_score"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        android:ellipsize="end"
        android:singleLine="false"
        android:text="time"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/vendorrating_imgs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/commentitem_tv_reviews"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/vendorrating_img1"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginRight="2dp" >
        </ImageView>

        <ImageView
            android:id="@+id/vendorrating_img2"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginRight="2dp" >
        </ImageView>

        <ImageView
            android:id="@+id/vendorrating_img3"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginRight="2dp" >
        </ImageView>

        <ImageView
            android:id="@+id/vendorrating_img4"
            android:layout_width="75dp"
            android:layout_height="75dp" >
        </ImageView>
    </LinearLayout>

</RelativeLayout>