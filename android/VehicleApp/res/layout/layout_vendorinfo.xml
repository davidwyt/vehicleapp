<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vendorinfo_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/vendor_head"
            style="@style/ShopInfoFormContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/vendor_icon"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_marginTop="4dp"
                android:contentDescription="@string/title" >
            </ImageView>

            <TextView
                android:id="@+id/vendor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@id/vendor_icon"
                android:ellipsize="end"
                android:maxLines="2"
                android:singleLine="false"
                android:text="商户名xxxxxxx" >
            </TextView>

            <TextView
                android:id="@+id/vendor_businesstimelabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/vendor_name"
                android:layout_below="@id/vendor_name"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="营业时间:" >
            </TextView>

            <TextView
                android:id="@+id/vendor_businesstime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/vendor_businesstimelabel"
                android:layout_below="@id/vendor_name"
                android:layout_toRightOf="@id/vendor_businesstimelabel"
                android:ellipsize="end"
                android:maxLines="2"
                android:singleLine="false"
                android:text="营业时间:" >
            </TextView>

            <TextView
                android:id="@+id/vendor_scorelabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/vendor_businesstimelabel"
                android:layout_below="@id/vendor_businesstimelabel"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="综合评价:" >
            </TextView>

            <RatingBar
                android:id="@+id/ratingbar_score"
                style="@style/VendorRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/vendor_scorelabel"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@id/vendor_scorelabel"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="5" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="4dp"
            android:background="@color/gray" >
        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:background="@color/textShadow" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="接待："
                android:textSize="14sp" >
            </TextView>

            <TextView
                android:id="@+id/vendor_reception"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="021"
                android:textColor="@color/red"
                android:textSize="14sp" >
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="环境："
                android:textSize="14sp" >
            </TextView>

            <TextView
                android:id="@+id/vendor_environment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="021"
                android:textColor="@color/red"
                android:textSize="14sp" >
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="价格："
                android:textSize="14sp" >
            </TextView>

            <TextView
                android:id="@+id/vendor_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="021"
                android:textColor="@color/red"
                android:textSize="14sp" >
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="技术："
                android:textSize="14sp" >
            </TextView>

            <TextView
                android:id="@+id/vendor_technology"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="021"
                android:textColor="@color/red"
                android:textSize="14sp" >
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="效率："
                android:textSize="14sp" >
            </TextView>

            <TextView
                android:id="@+id/vendor_efficiency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="021"
                android:textColor="@color/red"
                android:textSize="14sp" >
            </TextView>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="4dp"
            android:background="@color/gray" >
        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:background="@color/textShadow" >

            <TextView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/icon_phone" >
            </TextView>

            <TextView
                android:id="@+id/vendor_mobilenum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="021110000"
                android:textSize="22sp" >
            </TextView>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="4dp"
            android:background="@color/gray" >
        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:background="@color/textShadow" >

            <TextView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/icon_address" >
            </TextView>

            <TextView
                android:id="@+id/vendor_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:ellipsize="end"
                android:gravity="center"
                android:text="4.75分"
                android:textSize="22sp" >
            </TextView>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="4dp"
            android:background="@color/gray" >
        </View>
        
                <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:background="@color/textShadow" >

            <TextView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/icon_introduction" >
            </TextView>

            <TextView
                android:id="@+id/vendor_introduction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:gravity="center"
                android:textSize="22sp" >
            </TextView>
        </LinearLayout>
    </LinearLayout>

</ScrollView>