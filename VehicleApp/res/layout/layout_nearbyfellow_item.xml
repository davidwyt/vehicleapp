<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nearbyfellowitem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="6dp" >

    <ImageView
        android:id="@+id/nearbyfellow_iv_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/contact_list_minus_btn_normal"
        android:focusable="false" />

    <TextView
        android:id="@+id/nearbyfellow_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/nearbyfellow_iv_head"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/nearbyfellow_iv_head"
        android:ellipsize="end"
        android:gravity="left"
        android:singleLine="true"
        android:text="username"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/nearbyfellow_tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/nearbyfellow_tv_name"
        android:layout_below="@id/nearbyfellow_tv_name"
        android:ellipsize="end"
        android:gravity="left"
        android:singleLine="true"
        android:text="sssss"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/nearbyfellow_tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/nearbyfellow_tv_address"
        android:ellipsize="end"
        android:gravity="right"
        android:singleLine="true"
        android:text="ttt"
        android:textSize="15sp" />

</RelativeLayout>