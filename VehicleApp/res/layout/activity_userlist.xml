<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/userlist"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/layout_tile"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:background="@drawable/common_signin_btn_icon_pressed_dark" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_bottombar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" >

        <Button
            android:id="@+id/bar_btn_message"
            style="@drawable/send_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:background="@drawable/common_signin_btn_icon_pressed_dark"
            android:gravity="fill" />

        <Button
            android:id="@+id/bar_btn_vendor"
            style="@drawable/send_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:background="@drawable/common_signin_btn_icon_pressed_dark"
            android:gravity="fill" />

        <Button
            android:id="@+id/bar_btn_setting"
            style="@drawable/send_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:background="@drawable/common_signin_btn_icon_pressed_dark"
            android:gravity="fill" />
    </LinearLayout> 
    <ListView
        android:id="@+id/list_users"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/layout_bottombar"
        android:layout_below="@id/layout_tile"
        android:layout_marginLeft="2dip"
        android:layout_marginRight="2dip"
        android:layout_marginTop="10.0dip"
        android:cacheColorHint="#00000000"
        android:divider="#000"
        android:dividerHeight="1dp"
        android:scrollbars="vertical" />

</RelativeLayout>